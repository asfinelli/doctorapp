


<div class="container">

  <% @appointment.all.sort_by(&:created_at).each do |appointment| %>
  <ul class="list-group">
    <li class="list-group-item">Date: <%= appointment.created_at %></li>
    <li class="list-group-item">Name: <%= appointment.name %></li>
    <li class="list-group-item">Symptoms: <%= appointment.symptoms %></li>
    <li class="list-group-item">Doctor Email: <%= appointment.doctor.email %></li>
    <li class="list-group-item">Doctor Follow Up: <%= appointment.follow_up %></li>
    <li class="list-group-item">Doctor Follow Up: <%= link_to "contact", new_conversation_path(recipient_id: appointment.doctor_id) %></li>
  </ul>
<% end %>
</div>
