<%= form_for @appointment do |f| %>

<div class="field">
  <%= f.label :user_id %><br />
  <%= f.hidden_field :user_id, required: true, value: current_user.id %>
</div>

<div class="field">
  <%= f.label :symptoms %><br />
  <div class="input">

  <%= f.text_area :symptoms, autofocus: true, required: true %>
</div>
</div>
<div class="field">
  <%= f.label :blood_pressure %><br />
  <div class="input">

  <%= f.text_field :blood_pressure, autofocus: true, required: true %>
</div>
</div>
<div class="field">
  <%= f.label :temperature %><br />
  <div class="input">

  <%= f.text_field :temperature, autofocus: true, required: true %>
</div>
</div>
<div class="field">
  <%= f.label :medications %><br />
  <div class="input">

  <%= f.text_field :medications, autofocus: true, required: true %>
</div>
</div>
<div class="actions">
  <%= f.submit "submit" %>
</div>
<% end %>
